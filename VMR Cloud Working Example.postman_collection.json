			"script": {
				"type": "text/javascript",
				"exec": [
					"Object.prototype.stopRun = function(reason) {",
					"    postman.setNextRequest(null);",
					"    pm.expect.fail(reason);",
					"}",
					"",
					"Object.prototype.updateCurrentVessel = function(vesselID) {",
					"    pm.collectionVariables.set(\"current_vessel\", vesselID);",
					"}",
					"",
					"Object.prototype.updateCurrentVoyage = function(voyageID) {",
					"    pm.collectionVariables.set(\"current_voyage\", voyageID);",
					"}",
					""
				]
			}
